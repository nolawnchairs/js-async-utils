    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^18.17.5",
    "dts-bundle-generator": "^8.0.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "define": "dts-bundle-generator -o index.d.ts ./src/index.ts -config ./dts-config.json",
    "build": "tsc && npm rum define",
    "test": "jest"
  }
}
